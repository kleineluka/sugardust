---
import AppLayout from "../layouts/AppLayout.astro";
import ConfigEditor from "../components/ConfigEditor.astro";
import { parseConfigFile } from "../data/plugins";
import type { PluginConfigFile } from "../types/plugin";

const sampleConfigContent = `## Settings file was created by plugin HuniePopUltimate v1.0.0
## Plugin GUID: OSK.BepInEx.HuniePopUltimate

[general]

## Path to the HuniePop install directory.
# Setting type: String
# Default value: D:\\Games\\Steam\\steamapps\\common\\HuniePop 2 - Double Date\\BepInEx\\plugins\\..\\..\\..\\HuniePop
HuniePopDir = D:\\Games\\Steam\\steamapps\\common\\HuniePop 2 - Double Date\\BepInEx\\plugins\\..\\..\\..\\HuniePop

## If HuniePop date locations should be added.
# Setting type: Boolean
# Default value: true
AddDateLocations = true

## If HuniePop sim locations should be added.
# Setting type: Boolean
# Default value: true
AddSimLocations = true

## If HuniePop characters should be added.
# Setting type: Boolean
# Default value: true
AddCharacters = true

## If HuniePop stats should be used for Lola.
# Setting type: Boolean
# Default value: true
UseHp1LolaStats = true

## If HuniePop lines should be used for Lola.
# Setting type: Boolean
# Default value: true
UseHp1LolaLines = true

## If HuniePop stats should be used for Jessie.
# Setting type: Boolean
# Default value: true
UseHp1JessieStats = true

## If HuniePop lines should be used for Jessie.
# Setting type: Boolean
# Default value: true
UseHp1JessieLines = true

## If all HuniePop outfit and hairstyles should auto-unlock.
# Setting type: Boolean
# Default value: false
UnlockStyles = false

## If all HuniePop photos should auto-unlock.
# Setting type: Boolean
# Default value: false
UnlockPhotos = false`;

const samplePlugins = [
  { name: 'HuniePopUltimate', guid: 'OSK.BepInEx.HuniePopUltimate', version: '1.0.0', active: true },
  { name: 'BepInEx', guid: 'io.bepinex.core', version: '5.4.21', active: false },
  { name: 'ConfigurationManager', guid: 'com.bepis.bepinex.configurationmanager', version: '18.0.1', active: false },
  { name: 'UnityExplorer', guid: 'com.sinai.unityexplorer', version: '4.9.0', active: false },
];

const parsedConfig = parseConfigFile(sampleConfigContent);
---

<!-- Plugin Configuration Editor and Viewerx -->
<AppLayout title="sugardust - Config Editor">
  <div class="config-page">
    <!-- Plugin List Sidebar -->
    <aside class="plugin-sidebar">
      <div class="sidebar-header">
        <h3>Plugins</h3>
        <span class="plugin-count">{samplePlugins.length}</span>
      </div>
      <div class="plugin-list">
        {samplePlugins.map(plugin => (
          <button 
            class:list={["plugin-item", { active: plugin.active }]}
            data-plugin-guid={plugin.guid}
          >
            <!-- Generic wrench svg until I find something better... -->
            <div class="plugin-item-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
              </svg>
            </div>
            <div class="plugin-item-info">
              <span class="plugin-item-name">{plugin.name}</span>
              <span class="plugin-item-version">v{plugin.version}</span>
            </div>
          </button>
        ))}
      </div>
    </aside>
    <!-- Main configuration area -->
    <main class="config-main">
      <ConfigEditor 
        config={parsedConfig} 
        filePath="BepInEx/config/OSK.BepInEx.HuniePopUltimate.cfg"
      />
    </main>
  </div>
</AppLayout>

<!-- CSS -->
<style>
  :global([data-page-content]:has(.config-page)) {
    padding: 0 !important;
  }

  .config-page {
    display: flex;
    width: 100%;
    height: 100%;
    gap: 0;
    overflow: hidden;
    padding: 0 24px;
  }

  .plugin-sidebar {
    width: 280px;
    min-width: 280px;
    background: linear-gradient(180deg, rgba(15, 25, 35, 0.95) 0%, rgba(10, 20, 30, 0.98) 100%);
    border-right: 3px solid rgba(106, 216, 232, 0.3);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    border-bottom: 2px solid rgba(106, 216, 232, 0.2);
    background: rgba(30, 90, 110, 0.3);
  }

  .sidebar-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 700;
    color: var(--hp-teal-light);
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .plugin-count {
    background: var(--hp-pink);
    color: white;
    font-size: 12px;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 12px;
  }

  .plugin-list {
    flex: 1;
    overflow-y: auto;
    padding: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .plugin-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: rgba(30, 50, 70, 0.4);
    border: 2px solid transparent;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    width: 100%;
  }

  .plugin-item:hover {
    background: rgba(45, 184, 176, 0.15);
    border-color: rgba(106, 216, 232, 0.4);
  }

  .plugin-item.active {
    background: linear-gradient(135deg, rgba(45, 184, 176, 0.25) 0%, rgba(30, 90, 110, 0.4) 100%);
    border-color: var(--hp-teal-light);
    box-shadow: 0 0 20px rgba(45, 184, 176, 0.2);
  }

  .plugin-item-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(106, 216, 232, 0.15);
    border-radius: 8px;
    color: var(--hp-teal-light);
  }

  .plugin-item.active .plugin-item-icon {
    background: var(--hp-teal);
    color: white;
  }

  .plugin-item-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    overflow: hidden;
  }

  .plugin-item-name {
    font-size: 14px;
    font-weight: 600;
    color: #e5ffff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .plugin-item-version {
    font-size: 11px;
    color: var(--hp-pink);
    font-weight: 500;
  }

  .config-main {
    flex: 1;
    overflow-y: auto;
    padding: 24px;
    background: linear-gradient(180deg, rgba(20, 40, 60, 0.6) 0%, rgba(15, 30, 45, 0.8) 100%);
  }

  .plugin-list::-webkit-scrollbar,
  .config-main::-webkit-scrollbar {
    width: 8px;
  }

  .plugin-list::-webkit-scrollbar-track,
  .config-main::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
  }

  .plugin-list::-webkit-scrollbar-thumb,
  .config-main::-webkit-scrollbar-thumb {
    background: rgba(106, 216, 232, 0.4);
    border-radius: 4px;
  }

  .plugin-list::-webkit-scrollbar-thumb:hover,
  .config-main::-webkit-scrollbar-thumb:hover {
    background: rgba(106, 216, 232, 0.6);
  }
</style>

<!-- This should actually do stuff... when I start the Rust side. -->
<script>
  function initConfigPage() {
    const pluginItems = document.querySelectorAll('.plugin-item');
    pluginItems.forEach(item => {
      item.addEventListener('click', () => {
        pluginItems.forEach(i => i.classList.remove('active'));
        item.classList.add('active');
        const guid = item.getAttribute('data-plugin-guid');
        console.log('Selected plugin:', guid);
      });
    });
  }

  document.addEventListener('config-save', ((e: CustomEvent) => {
    const { filePath, changes } = e.detail;
    console.log('Saving config:', filePath);
    console.log('Changes:', changes);
  }) as EventListener);

  document.addEventListener('DOMContentLoaded', initConfigPage);
  document.addEventListener('astro:page-load', initConfigPage);
</script>
