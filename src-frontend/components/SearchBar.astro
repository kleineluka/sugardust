---
interface Props {
    placeholder?: string;
}

const { placeholder = "Search mods..." } = Astro.props;
---

<!-- Search Bar -->
<div class="search-container">
    <input 
        type="text" 
        class="search-input" 
        placeholder={placeholder}
        id="mod-search"
    />
    <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
    </svg>
</div>

<!-- CSS -->
<style>
    .search-container {
        position: relative;
        width: 40vw;
        z-index: 200; /* above status bar to allow interactions */
    }

    .search-input {
        width: 100%;
        border: 3px solid #86DFE7;
        border-radius: 8px;
        padding: clamp(16px, 2.1vw, 24px) 16px clamp(16px, 2.1vw, 24px) 44px;
        background: linear-gradient(to top, #3B9EB5, #56BBCC);
        box-shadow: inset 0 0 0 2px #3C8EA6;
        font-size: 14px;
        font-weight: 600;
        color: #D5F3F7;
        transition: all 0.3s ease;
        outline: none;
    }

    .search-input::placeholder {
        color: rgba(213, 243, 247, 0.6);
    }

    .search-input:focus {
        border-color: #A8F5FF;
        box-shadow: inset 0 0 0 2px #3C8EA6, 0 0 20px rgba(134, 223, 231, 0.4);
        background: linear-gradient(to top, #45B0C8, #65D0E0);
    }

    .search-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #D5F3F7;
        pointer-events: none;
    }
</style>

<!-- Make it work..... -->
<script>
    function initSearchBar() {
        const searchInput = document.getElementById('mod-search') as HTMLInputElement;
        searchInput?.addEventListener('input', (e) => {
            const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
            console.log('Search:', searchTerm);
        });
    }

    document.addEventListener('DOMContentLoaded', initSearchBar);
    document.addEventListener('astro:page-load', initSearchBar);
</script>
