---
import NavButton from "./NavButton.astro";

const currentPath = Astro.url.pathname;

const navItems = [
    { icon: "/images/icons/gamepad.webp", label: "Installed", url: "/", active: currentPath === "/" },
    { icon: "/images/icons/search.webp", label: "Browse", url: "/browse", active: currentPath === "/browse" },
    { icon: "/images/icons/paint.webp", label: "Configuration", url: "/config", active: currentPath === "/config" },
    { icon: "/images/icons/box.webp", label: "Profiles", url: "/profiles", active: currentPath === "/profiles" },
    { icon: "/images/icons/heart.webp", label: "About", url: "/about", active: currentPath === "/about" },
];
---

<!-- Navigation Bar -->
<nav class="navbar">
    {navItems.map((item) => (
        <NavButton icon={item.icon} label={item.label} url={item.url} active={item.active} radius="6px" />
    ))}
</nav>

<!-- CSS -->
<style>
    .navbar {
        background: #16638B;
        border: none;
        border-top: 3px solid #21A2DE;
        box-shadow: inset 0 2px 0 rgba(33, 162, 222, 0.3);
        padding: clamp(8px, 1.5vw, 20px) clamp(12px, 2vw, 24px);
        display: flex;
        justify-content: space-around;
        align-items: center;
        gap: clamp(4px, 1vw, 12px);
        margin: 0 clamp(8px, 1.5vw, 20px);
        position: relative;
        z-index: 100;
    }
</style>
